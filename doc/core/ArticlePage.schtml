<html abstract="true">

<body>
   <div id="content" extends="PageLayout" section="articles">

      <div id="ArticleIndex" abstract="true" class=':= "pageIndexEntry " + (containsString(pageURL, url) ? "pageIndexSelected" : "")'>
         <%! String title, url, pageURL := Window.window.location.href; 
             boolean containsString(String base, String sub) {
                if (base == null || sub == null)
                   return false;
                return base.contains(sub);
             }%>
         <a href='= url'><div class="pageTitle"><%= title %></div></a>
      </div>

      <div id="mainSection">
         <div id="pageIndex" class="pageIndex" exec="server">
            <div extends="ArticleIndex" title="Leveraging your code" url="codeLeverage.html"/>
            <div extends="ArticleIndex" title="Motivation for layers" url="aboutLayers.html"/>
            <div extends="ArticleIndex" title="Copied code, plugins and IOC" url="copyOrNot.html"/>
            <div extends="ArticleIndex" title="Layered build and packaging system" url="buildAndPackaging.html"/>
            <div extends="ArticleIndex" title="Java to javascript" url="javaToJavascript.html"/>
            <div extends="ArticleIndex" title="Synchronization using layers" url="syncWithLayers.html"/>
            <div extends="ArticleIndex" title="Persistence using layers" url="persistWithLayers.html"/>
            <div extends="ArticleIndex" title="Dynamic runtime" url="dynamicRuntime.html"/>
            <div extends="ArticleIndex" title="Parsing and modifying code" url="parseletsIntro.html"/>
            <div extends="ArticleIndex" title="Microservices with layers" url="microservices.html"/>
            <div extends="ArticleIndex" title="Customizable enterprise systems" url="enterprise.html"/>
            <div extends="ArticleIndex" title="Improving security" url="security.html"/>
         </div>

         <div id="navDivider">
            <%! boolean navOpen = true; %>
            <img id="navDividerIcon" clickEvent="=: navOpen = !navOpen" src=':= navOpen ? "/images/left-arrows.svg" : "/images/right-arrows.svg"'/>
         </div>

         <style type="text/css">
            .pageIndex {
               <%= navDivider.navOpen ? "flex: 0 0 300px;" : "display: none;" %>
            }
         </style>

         <div id="pageContent">
         </div>
      </div>
   </div>
</body>

</html>
